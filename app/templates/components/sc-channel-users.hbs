{{#paper-card as |card|}}

  {{#card.title as |title|}}
    {{#title.text as |text|}}
       {{#text.headline}}Voters{{/text.headline}}
    {{/title.text}}
  {{/card.title}}

  {{#card.content}}
    {{#each voters as |voter|}}
      {{sc-channel-users/user
        channelUser=voter
        isAdmin=currentChannelUser.isAdmin
        onKickUser=onKickUser
        votes=votes
      }}
    {{/each}}
  {{/card.content}}

  {{!-- Observers --}}
  {{#if observers}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
         {{#text.headline}}Observers{{/text.headline}}
      {{/title.text}}
    {{/card.title}}

    {{#card.content}}
      {{#each observers as |observer|}}
        {{sc-channel-users/user
          channelUser=observer
          isAdmin=currentChannelUser.isAdmin
          onKickUser=onKickUser
          votes=votes
        }}
      {{/each}}
    {{/card.content}}
  {{/if}}
{{/paper-card}}
